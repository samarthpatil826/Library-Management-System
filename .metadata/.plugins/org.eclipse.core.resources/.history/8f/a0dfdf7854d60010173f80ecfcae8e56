/* unified-table-styles.css
   Use this for viewBooks.css / viewMembers.css / viewIssueRecords.css
*/

@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap');

:root{
  --bg: #0f0f10;
  --panel: #171717;
  --panel-2: #1e1e1e;
  --accent: #4f63ff;
  --accent-2: #6e7aff;
  --muted: #cfcfcf;
  --row-hover-shadow: 0 18px 40px rgba(0,0,0,0.6);
}

* { box-sizing: border-box; }

html,body{
  height: 100%;
  margin: 0;
  padding: 0;
  background: var(--bg);
  font-family: 'Poppins', sans-serif;
  color: #EEE;
}

/* Center page and limit width */
.table-container {
  width: 92%;
  max-width: 1100px;
  margin: 48px auto;
  text-align: center;
  padding: 36px 28px;
}

/* Card / panel around table */
.table-panel {
  width: 100%;
  background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(0,0,0,0.07));
  border-radius: 16px;
  padding: 36px 28px;
  box-shadow:
    12px 12px 40px rgba(0,0,0,0.75),
    -8px -8px 28px rgba(80,80,80,0.04);
  transition: transform .25s ease, box-shadow .25s ease;
}

/* subtle lift when hovering entire panel */
.table-panel:hover {
  transform: translateY(-6px);
  box-shadow:
    18px 22px 60px rgba(0,0,0,0.85),
    -10px -10px 30px rgba(90,90,90,0.06);
}

/* Heading */
.table-container h2 {
  margin: 0 0 22px;
  font-size: 30px;
  font-weight: 600;
  color: #fff;
}

/* Table base */
.table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
  border-radius: 12px;
  overflow: hidden;             /* clips inner row shadow */
  background: var(--panel);
  box-shadow: 0 10px 30px rgba(0,0,0,0.6);
}

/* Header row */
.table thead th {
  background: linear-gradient(180deg, #222 0%, #1f1f1f 100%);
  color: #fff;
  text-transform: uppercase;
  font-weight: 600;
  font-size: 13px;
  letter-spacing: .6px;
  padding: 18px 16px;
  border-bottom: 1px solid rgba(255,255,255,0.03);
}

/* Body cells */
.table tbody td {
  padding: 18px 16px;
  font-size: 15px;
  color: var(--muted);
  background: var(--panel-2);
  border-bottom: 1px solid rgba(255,255,255,0.02);
  vertical-align: middle;
}

/* Make clickable feel: row-level hover */
.table tbody tr {
  transition: transform .24s cubic-bezier(.2,.9,.22,1), box-shadow .24s ease, background-color .18s ease;
  transform-origin: center;
  will-change: transform, box-shadow;
}

/* 3D lift effect on hover for each row */
.table tbody tr:hover {
  transform: translateY(-8px) scale(1.01);
  box-shadow: var(--row-hover-shadow);
  background: linear-gradient(90deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
  z-index: 2;
}

/* Slight visual separation for even rows (optional) */
.table tbody tr:nth-child(even) td {
  background: #161616;
}

/* Ensure click cursor */
.table tbody tr, .table tbody td { cursor: default; }
.table tbody tr:hover, .table thead th { cursor: pointer; }

/* Make header cells not move on hover */
.table thead th { position: relative; z-index: 3; }

/* Back button style */
.back-btn {
  display: inline-block;
  margin-top: 26px;
  padding: 12px 24px;
  background: linear-gradient(90deg,var(--accent), var(--accent-2));
  color: #fff;
  text-decoration: none;
  border-radius: 10px;
  font-weight: 600;
  transition: transform .18s ease, box-shadow .18s ease;
  box-shadow: 0 8px 20px rgba(79,99,255,0.16);
}
.back-btn:hover {
  transform: translateY(-4px);
  box-shadow: 0 18px 36px rgba(80,110,255,0.22);
}

/* Responsive */
@media (max-width: 900px) {
  .table-container { padding: 20px; margin: 30px auto; }
  .table thead th, .table tbody td { padding: 12px 10px; font-size: 14px; }
}

/* Accessibility: focus style for keyboard users */
.table tbody tr:focus-within,
.table tbody tr:focus {
  outline: 3px solid rgba(79,99,255,0.18);
  outline-offset: 4px;
}
