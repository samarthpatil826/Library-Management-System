package com.jsp.library.servlet;

import java.io.IOException;
import java.util.List;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.jsp.library.entity.IssueRecord;
import com.jsp.library.service.LibraryService;

@WebServlet("/viewIssueRecords")
public class ViewIssueRecords extends HttpServlet {
	
	LibraryService ls= new LibraryService();
	
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		List<IssueRecord> il = ls.getIssueList();
		
		req.setAttribute("records", il);
		
		RequestDispatcher rd = req.getRequestDispatcher("viewIssueRecords.jsp");
		rd.forward(req, resp);
	}

}
